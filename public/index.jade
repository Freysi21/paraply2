doctype html
html
	head
		title Paraply: IT-arrangementer i Bergen
		link(rel='stylesheet', href='css/main.css', type='text/css')
	body
		header.clearfix
			.wrapper
				img#logo('src=img/kompiler.png')
				h1 IT-arrangementer i Bergen
				form(action='/', method='POST')
					input.url(type='text', name='url' placeholder='Legg til IT-arrangement med URL')
					button(type='submit') Add
					label(for='url') fra facebook, meetup eller eventbrite
		.wrapper
			each group in events
				h2.dateHeader= group.dateHeader
				ul.events
					each event in group.events
						li.event
							.eventTime #{getHourMinutes(event.date)}
							.eventTitle 
								a(href="#{event.source}") #{event.title}

							.eventSubtitle
								if event.organiser
									| #{event.organiser} 
								if event.location.name
									| @ #{event.location.name} 
								if event.location.address
									| (#{event.location.address})

		footer
			.wrapper
				img#logoFooter('src=img/kompiler-grey.png')
				nav#footer
					ul
						li
							a(href='https://github.com/pilsprog') github
						li
							a(href='http://kompiler.no') blog

